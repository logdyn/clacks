{
    "name": "clacks",
    "version": "1.0.0",
    "description": "Message broker to propagate objects through relevant client sessions",
    "main": "./lib/index.js",
    "devDependencies": {
        "@types/jest": "^24.0.11",
        "@types/node": "^11.13.4",
        "jest": "^24.7.1",
        "ts-jest": "^24.0.2",
        "tslint": "^5.15.0",
        "typescript": "^3.4.3"
    },
    "scripts": {
        "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
        "compile": "tsc",
        "pretest": "npm run lint",
        "test": "jest"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "transform": {
            "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "/__tests__/.*\\.(ts|tsx|js)$",
        "collectCoverage": true
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/logdyn/clacks.git"
    },
    "keywords": [
        "logdyn",
        "messaging"
    ],
    "author": "logdyn <contact@logdyn.com> (logdyn.com)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/logdyn/clacks/issues"
    },
    "homepage": "https://github.com/logdyn/clacks#readme"
}